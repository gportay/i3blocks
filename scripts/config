#low_threshold=30
#threshold_type=time
#last_full_capacity=false
#integer_battery_capacity=false
#hide_seconds=true

[load]
format=%1min
# Default values
#format=%1min %5min %15min

[tztime]
instance=local
format=%Y-%m-%d %H:%M:%S
